@model HomeViewModel

<header >

    <h1>Welcome to DineSight</h1>
    <nav>
        <ul>
            <li>HOME</li>
            <li>RESERVATION</li>
        </ul>
    </nav>
   
</header>
<body>

<div class="slider">
        <div class="list">
            <div class="item">
                <img src="img/1.png">
            </div>
            <div class="item active">
                <img src="img/2.png">
            </div>
            <div class="item">
                <img src="img/3.png">
            </div>
            <div class="item">
                <img src="img/4.png">
            </div>
            <div class="item">
                <img src="img/5.png">
            </div>
            
        </div>
        <div class="circle">
            EXPERIENCE A CULINARY MASTERPIECE WITH OUR FEATURED DISH OF THE WEEK!
        </div>
       @foreach (var restaurant in Model.Restaurants)
        {   
            <div class="content" id="r-@restaurant.RestaurantId" style="display:none">
                <div>Location: @restaurant.Locaton</div>
                <!--<p>Description: restaurant.Description-->
                <div>@restaurant.Name</div>
                <button onclick="location.href='/restaurant/view/@restaurant.RestaurantId'">View Menu</button>
            </div>
          }
    
    <div class="arow">
        <button id="prev"><</button>
        <button id="next">></button>
    </div>
</div>


<script src="app.js"></script>
</body>